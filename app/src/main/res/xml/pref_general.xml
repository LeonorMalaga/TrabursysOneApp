<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:key="work_mode_list"
        android:title="@string/pref_work_mode"
        android:defaultValue="1"
        android:entries="@array/pref_work_mode_list_titles"
        android:entryValues="@array/pref_work_mode_list_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />
    <ListPreference
        android:key="work_save_list"
        android:title="@string/pref_save_mode"
        android:defaultValue="1"
        android:entries="@array/pref_work_save_list_titles"
        android:entryValues="@array/pref_work_save_list_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="getUrl"
        android:title="@string/pref_get_url"
        android:defaultValue="@string/pref_default_get_url"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="postHeader"
        android:title="@string/pref_post_header_url"
        android:defaultValue="@string/pref_default_post_header_url"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

</PreferenceScreen>
